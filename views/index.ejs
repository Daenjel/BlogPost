        <main>
          <div id="progress" class="mdl-spinner mdl-js-spinner is-active"></div>
          <!-- Start WOWSlider.com -->
          <iframe id="iframe" src="wowslider.html" scrolling="no" style="width:1536px;height:360px;max-width:100%;overflow:hidden;border:none;padding:0;margin:0 auto;display:block;" marginheight="0" marginwidth="0"></iframe>
          <!-- End WOWSlider.com -->
          <div id="table_body" class="row"></div>
           <!-- Images used to open the lightbox -->
          <div class="raw">
            <div class="column">
              <img id="mod" src="assets/item-1.png" onclick="openModal();currentSlide(1)" class="hover-shadow">
            </div>
          </div>

          <!-- The Modal/Lightbox -->
          <div id="myModal" class="modal">
            <span class="close cursor" onclick="closeModal()">&times;</span>
            <div class="modal-content">

              <div class="mySlides">
                <div class="numbertext">1 / 4</div>
                <img src="data1/images/feitong.jpg" style="width:100%">
              </div>

              <div class="mySlides">
                <div class="numbertext">2 / 4</div>
                <img src="data1/images/feitong1.jpg" style="width:100%">
              </div>

              <div class="mySlides">
                <div class="numbertext">3 / 4</div>
                <img src="data1/images/feitong2.jpg" style="width:100%">
              </div>

              <div class="mySlides">
                <div class="numbertext">4 / 4</div>
                <img src="data1/images/feitong3.jpg" style="width:100%">
              </div>

              <!-- Next/previous controls -->
              <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
              <a class="next" onclick="plusSlides(1)">&#10095;</a>

              <!-- Caption text -->
              <div class="caption-container">
                <p id="caption"></p>
              </div>

              <!-- Thumbnail image controls -->
              <div class="column">
                <img class="demo" src="data1/images/feitong.jpg" onclick="currentSlide(1)" alt="Nature">
              </div>

              <div class="column">
                <img class="demo" src="data1/images/feitong1.jpg" onclick="currentSlide(2)" alt="Snow">
              </div>

              <div class="column">
                <img class="demo" src="data1/images/feitong2.jpg" onclick="currentSlide(3)" alt="Mountains">
              </div>

              <div class="column">
                <img class="demo" src="data1/images/feitong3.jpg" onclick="currentSlide(4)" alt="Lights">
              </div>
            </div>
          </div> 
        </main>
